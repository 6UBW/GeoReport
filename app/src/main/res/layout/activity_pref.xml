<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/gradient_titan">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Preferences"
        android:id="@+id/lbl_pref_title"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="0dp"
        android:textColor="#ffffffff"
        android:gravity="center"
        android:background="@drawable/shape_1" />

    <ToggleButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Track ON"
        android:id="@+id/btn_pref_trackingToggle"
        android:checked="false"
        android:textOff="Track OFF"
        android:textOn="Track ON"
        android:background="@drawable/toggletracking"
        android:textStyle="bold"
        android:textColor="#ffffffff"
        android:textSize="18dp"
        android:layout_above="@+id/btn_pref_save"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp" />

    <RadioGroup
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lbl_pref_title"
        android:layout_centerHorizontal="true"
        android:id="@+id/radiogrp_pref_settings">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Default"
            android:id="@+id/radio_pref_default"
            android:layout_gravity="center_horizontal"
            android:textColor="#ffE7A831"
            android:checked="true"
            android:textSize="20sp"
            android:textStyle="bold" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User Mode"
            android:id="@+id/radio_pref_user"
            android:layout_gravity="center_horizontal"
            android:textColor="#ffE7A831"
            android:checked="false"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="#ffffad58"
            android:id="@+id/linear_pref_user"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="10dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txt_pref_sampleintUser"
                android:background="@android:drawable/editbox_background_normal"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txt_pref_uploadintUser"
                android:background="@android:drawable/editbox_background_normal"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp" />

        </LinearLayout>

    </RadioGroup>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save"
        android:id="@+id/btn_pref_save"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textColor="#ffffffff"
        android:background="@drawable/button_2"
        android:textSize="18sp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp" />

</RelativeLayout>
