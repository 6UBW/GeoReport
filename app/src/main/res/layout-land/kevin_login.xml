<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="200dp"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context=".KevinLoginActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/label_login"
        android:id="@+id/lbl_login_title"
        android:gravity="center_horizontal"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="@string/label_login"
        android:id="@+id/btn_login_login"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="20dp" />

    <Button
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="@string/label_register"
        android:id="@+id/btn_login_register"
        android:textStyle="normal"
        android:textSize="14sp"
        android:layout_alignTop="@+id/btn_login_login"
        android:layout_alignLeft="@+id/lbl_login_forgotPass"
        android:layout_alignStart="@+id/lbl_login_forgotPass" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout_login_rowEmail"
        android:layout_below="@+id/lbl_login_title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="@string/label_email"
            android:id="@+id/lbl_login_email"
            android:textSize="18dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="0dp"
            android:layout_column="0"
            android:layout_row="0"
            android:layout_rowSpan="1"
            android:layout_columnSpan="1"
            android:layout_marginRight="0dp"
            android:layout_marginTop="0dp"
            android:layout_margin="0dp"
            android:layout_marginBottom="0dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/txt_login_email"
            android:background="@android:drawable/editbox_background"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="0dp"
            android:layout_column="1"
            android:layout_columnSpan="1"
            android:layout_row="1"
            android:layout_rowSpan="1"
            android:gravity="center|left"
            android:layout_marginTop="0dp"
            android:layout_margin="0dp"
            android:layout_marginBottom="0dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_login_rowEmail"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/layout_login_rowPass"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="20dp">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="@string/label_pass"
            android:id="@+id/lbl_login_pass"
            android:textSize="18dp"
            android:layout_below="@+id/lbl_login_email"
            android:layout_alignLeft="@+id/lbl_login_email"
            android:layout_alignStart="@+id/lbl_login_email"
            android:layout_columnSpan="1"
            android:layout_row="1"
            android:layout_rowSpan="1"
            android:layout_column="0"
            android:layout_marginRight="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="0dp"
            android:layout_margin="0dp"
            android:layout_marginBottom="0dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/txt_login_pass"
            android:background="@android:drawable/editbox_background_normal"
            android:layout_marginLeft="20dp"
            android:layout_column="1"
            android:layout_columnSpan="1"
            android:layout_row="0"
            android:layout_rowSpan="1"
            android:gravity="center|left"
            android:layout_marginRight="0dp"
            android:layout_marginTop="0dp"
            android:layout_margin="0dp"
            android:layout_marginBottom="0dp" />
    </LinearLayout>

    <TextView
    android:layout_width="match_parent"
    android:layout_height="35dp"
    android:text="@string/label_forgot"
    android:id="@+id/lbl_login_forgotPass"
    android:textSize="17sp"
    android:gravity="center_vertical|center_horizontal"
    android:textColor="#ff0010ff"
        android:layout_row="2"
    android:layout_column="0"
        android:layout_above="@+id/btn_login_register"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/layout_login_rowPass"
        android:layout_marginTop="10dp" />

</RelativeLayout>
