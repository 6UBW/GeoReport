<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context=".KevinLoginActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/login_scrollView"
        android:isScrollContainer="false"
        android:fillViewport="true"
        android:layout_below="@+id/lbl_login_title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="0dp"
        android:layout_above="@+id/btn_login_register"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/login_innerRelativeLayout">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_email"
                android:id="@+id/lbl_login_email"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/lbl_login_title"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="15dp"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="#ff6a00ab" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_pass"
                android:id="@+id/lbl_login_pass"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/txt_login_email"
                android:layout_alignLeft="@+id/lbl_login_email"
                android:layout_alignStart="@+id/lbl_login_email"
                android:textSize="20dp"
                android:textColor="#ff6a00ab"
                android:textStyle="bold" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/txt_login_pass"
                android:background="@android:drawable/editbox_background_normal"
                android:layout_below="@+id/lbl_login_pass"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="7dp"
                android:password="true" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:id="@+id/txt_login_email"
                android:background="@android:drawable/editbox_background"
                android:layout_below="@+id/lbl_login_email"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="7dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_forgot"
                android:id="@+id/lbl_login_forgotPass"
                android:textSize="20dp"
                android:layout_marginTop="20dp"
                android:textColor="#ff0010ff"
                android:layout_below="@+id/txt_login_pass"
                android:layout_centerHorizontal="true"
                android:gravity="center_horizontal"
                android:textStyle="bold" />

        </RelativeLayout>
    </ScrollView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/label_geo"
        android:id="@+id/lbl_login_title"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_1"
        android:textColor="#ffffffff"
        android:gravity="center" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/label_login"
        android:id="@+id/btn_login_login"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="20dp"
        android:background="@drawable/button_1"
        android:textColor="#ffffffff"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textSize="20dp"
        android:textStyle="bold" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/label_register"
        android:id="@+id/btn_login_register"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_above="@+id/btn_login_login"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="10dp"
        android:textColor="#ffffffff"
        android:background="@drawable/button_2"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp" />

</RelativeLayout>
