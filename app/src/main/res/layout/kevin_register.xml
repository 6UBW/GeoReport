<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".KevinRegisterActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/label_register"
        android:id="@+id/lbl_register_title"
        android:gravity="center_horizontal"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginTop="35dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:rowCount="5"
        android:columnCount="5"
        android:orientation="vertical"
        android:id="@+id/register_gridlayout"
        android:layout_below="@+id/lbl_register_title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="0dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_email"
            android:id="@+id/lbl_register_email"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_gravity="center_vertical" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password"
            android:id="@+id/lbl_register_pass"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_gravity="center_vertical" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confirm Password"
            android:id="@+id/lbl_register_passConf"
            android:layout_column="1"
            android:layout_row="2"
            android:layout_gravity="center_vertical" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Secret Question"
            android:id="@+id/lbl_register_secQ"
            android:layout_column="1"
            android:layout_row="3"
            android:layout_gravity="center_vertical" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Secret Answer"
            android:id="@+id/lbl_register_secA"
            android:layout_gravity="center_vertical" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/txt_register_email"
            android:layout_row="0"
            android:layout_column="3"
            android:layout_gravity="center_vertical" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/txt_register_pass"
            android:layout_row="1"
            android:layout_column="3"
            android:layout_gravity="center_vertical" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/txt_register_passConf"
            android:layout_row="2"
            android:layout_column="3"
            android:layout_gravity="center_vertical|fill_horizontal" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_register_secQ"
            android:layout_row="3"
            android:layout_column="3"
            android:layout_gravity="center_vertical|fill_horizontal" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_register_secA"
            android:layout_row="4"
            android:layout_column="3"
            android:layout_gravity="center_vertical|fill_horizontal" />

        <Space
            android:layout_width="10dp"
            android:layout_height="20px"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnSpan="1"
            android:layout_rowSpan="5" />

        <Space
            android:layout_width="10dp"
            android:layout_height="20px"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_rowSpan="5" />

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="0"
            android:layout_column="4"
            android:layout_rowSpan="5" />

    </GridLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:id="@+id/btn_register_submit"
        android:layout_marginBottom="30dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I have read the"
        android:id="@+id/box_register_terms"
        android:checked="false"
        android:layout_above="@+id/btn_register_submit"
        android:layout_alignLeft="@+id/register_gridlayout"
        android:layout_alignStart="@+id/register_gridlayout"
        android:layout_marginBottom="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  Terms of Agreement"
        android:id="@+id/textView"
        android:gravity="center"
        android:layout_alignTop="@+id/box_register_terms"
        android:layout_toRightOf="@+id/box_register_terms"
        android:layout_toEndOf="@+id/box_register_terms"
        android:layout_alignBottom="@+id/box_register_terms" />

</RelativeLayout>
