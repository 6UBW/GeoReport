<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".KevinAccountActivity"
    android:background="@drawable/gradient_titan">

    <!--
    use this to keep the app from automatically focusing on the edit text (w/c opens the soft keyboard
    android:focusable="true"
    android:focusableInTouchMode="true"
    -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:isScrollContainer="false"
        android:id="@+id/scrollView"
        android:fillViewport="true"
        android:layout_above="@+id/btn_myacc_logout"
        android:layout_below="@+id/lbl_myacc_title"
        android:layout_marginTop="20dp">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/myacc_innerRelativeLayout">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_testEmailName"
                android:id="@+id/lbl_myacc_email"
                android:textSize="25sp"
                android:textColor="#FFFFFFFF"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="@string/label_passsemi"
                android:id="@+id/lbl_myacc_pass"
                android:layout_below="@+id/lbl_myacc_email"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#ffE7A831" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="@string/label_reset"
                android:id="@+id/lbl_myacc_reset"
                android:layout_alignTop="@+id/lbl_myacc_pass"
                android:layout_toRightOf="@+id/lbl_myacc_pass"
                android:layout_toEndOf="@+id/lbl_myacc_pass"
                android:layout_marginLeft="20dp"
                android:textColor="#E7A831"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lbl_myacc_pass"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/layout_myacc_startDate"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text="@string/label_startdate"
                    android:id="@+id/lbl_myacc_startdate"
                    android:textSize="18sp"
                    android:layout_marginTop="0dp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:textStyle="bold"
                    android:textColor="#ffE7A831" />

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:ems="10"
                    android:id="@+id/txt_myacc_startDate"
                    android:background="@android:drawable/editbox_background_normal"
                    android:layout_marginTop="0dp"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:inputType="none" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:id="@+id/layout_myacc_endDate"
                android:layout_below="@+id/layout_myacc_startDate"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text="@string/label_enddate"
                    android:id="@+id/lbl_myacc_endDate"
                    android:textSize="18sp"
                    android:gravity="center_vertical"
                    android:textStyle="bold"
                    android:textColor="#ffE7A831" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:ems="10"
                    android:id="@+id/txt_myacc_endDate"
                    android:background="@android:drawable/editbox_background_normal"
                    android:gravity="center_vertical"
                    android:inputType="none" />

            </LinearLayout>

            <Button
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:text="@string/label_findTrajectory"
                android:id="@+id/btn_myacc_trajetory"
                android:layout_below="@+id/layout_myacc_endDate"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:textColor="#ffffffff"
                android:textStyle="bold"
                android:textSize="18sp"
                android:background="@drawable/button_2" />

        </RelativeLayout>
    </ScrollView>

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/label_logout"
        android:id="@+id/btn_myacc_logout"
        android:theme="@style/Widget.AppCompat.Button.Small"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:textColor="#ffffffff"
        android:textStyle="bold"
        android:textSize="20sp"
        android:background="@drawable/button_1" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/label_myacc"
        android:id="@+id/lbl_myacc_title"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="0dp"
        android:textColor="#ffffffff"
        android:gravity="center"
        android:background="@drawable/shape_1" />

</RelativeLayout>
