<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".KevinAccountActivity"
    android:background="@drawable/gradient_titan">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/myacc_scrollView"
        android:isScrollContainer="false"
        android:fillViewport="true"
        android:layout_above="@+id/btn_myacc_logout"
        android:layout_below="@+id/lbl_myacc_title"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="5dp">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/myacc_innerRelativeLayout">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email Dude Again"
                android:id="@+id/lbl_myacc_email"
                android:textSize="25dp"
                android:textColor="#FFFFFFFF"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="Password:"
                android:id="@+id/lbl_myacc_pass"
                android:layout_below="@+id/lbl_myacc_email"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="20dp"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="#E7A831" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="@string/label_reset"
                android:id="@+id/lbl_myacc_reset"
                android:layout_alignTop="@+id/lbl_myacc_pass"
                android:layout_toRightOf="@+id/lbl_myacc_pass"
                android:layout_toEndOf="@+id/lbl_myacc_pass"
                android:layout_marginLeft="20dp"
                android:textColor="#E7A831"
                android:textSize="20sp"
                android:textStyle="bold" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lbl_myacc_pass"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/layout_myacc_startDate"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_toLeftOf="@+id/btn_myacc_trajetory"
                android:layout_toStartOf="@+id/btn_myacc_trajetory">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text="Start Date:"
                    android:id="@+id/lbl_myacc_startdate"
                    android:textSize="20dp"
                    android:layout_below="@+id/lbl_myacc_pass"
                    android:layout_alignLeft="@+id/lbl_myacc_pass"
                    android:layout_alignStart="@+id/lbl_myacc_pass"
                    android:layout_marginTop="0dp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:textStyle="bold"
                    android:textColor="#E7A831" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:inputType="none"
                    android:ems="10"
                    android:id="@+id/txt_myacc_startDate"
                    android:background="@android:drawable/editbox_background_normal"
                    android:layout_below="@+id/lbl_myacc_startdate"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="0dp"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="20dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:id="@+id/layout_myacc_endDate"
                android:layout_below="@+id/layout_myacc_startDate"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:weightSum="1"
                android:layout_toLeftOf="@+id/btn_myacc_trajetory"
                android:layout_toStartOf="@+id/btn_myacc_trajetory">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text="@string/label_endate"
                    android:id="@+id/lbl_myacc_endDate"
                    android:textSize="20dp"
                    android:layout_alignStart="@+id/lbl_myacc_startdate"
                    android:gravity="center_vertical"
                    android:textStyle="bold"
                    android:textColor="#E7A831" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:inputType="none"
                    android:ems="10"
                    android:id="@+id/txt_myacc_endDate"
                    android:background="@android:drawable/editbox_background_normal"
                    android:gravity="center_vertical"
                    android:layout_marginRight="20dp" />

            </LinearLayout>

            <Button
                android:layout_width="130dp"
                android:layout_height="80dp"
                android:text="@string/label_findtraj"
                android:id="@+id/btn_myacc_trajetory"
                android:textColor="#ffffffff"
                android:textStyle="bold"
                android:textSize="18sp"
                android:background="@drawable/button_2"
                android:layout_alignTop="@+id/lbl_myacc_reset"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignBottom="@+id/layout_myacc_endDate"
                android:layout_marginRight="20dp" />

        </RelativeLayout>
    </ScrollView>

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/label_logout"
        android:id="@+id/btn_myacc_logout"
        android:theme="@style/Widget.AppCompat.Button.Small"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        android:textColor="#ffffffff"
        android:textStyle="bold"
        android:textSize="20sp"
        android:background="@drawable/button_1"
        android:layout_alignRight="@+id/myacc_scrollView"
        android:layout_alignEnd="@+id/myacc_scrollView"
        android:layout_alignLeft="@+id/myacc_scrollView"
        android:layout_alignStart="@+id/myacc_scrollView" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/label_myacc"
        android:id="@+id/lbl_myacc_title"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="0dp"
        android:textColor="#ffffffff"
        android:gravity="center"
        android:background="@drawable/shape_1" />

</RelativeLayout>
